<assembly>
	<id>distribution</id>
	<formats>
		<format>war</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
	    <fileSet>
			<directory>../modules/micrite-security/target/tmp</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>js-lib/**</include>
			</includes>
	    </fileSet>	 
	
	    <fileSet>
			<directory>../modules/micrite-security/target</directory>
			<outputDirectory>WEB-INF/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
			</excludes>
			
	    </fileSet>	 
	    <fileSet>
			<directory>../modules/micrite-security/src/main/webapp</directory>
			<outputDirectory></outputDirectory>
	    </fileSet>
	    <fileSet>
			<directory>../modules/micrite-security/src/main/resources</directory>
			<outputDirectory>WEB-INF/classes</outputDirectory>
			<includes>
				<include>**/struts.xml</include>
				<include>**/applicationContext*.xml</include>
				<include>**/struts_xml/*</include>	
			</includes>			
	    </fileSet>
	    <fileSet>
			<directory>../modules/micrite-security/target/dependencies</directory>
			<outputDirectory>WEB-INF/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>tools.jar</exclude>
				<exclude>jsp-api-2.0.jar</exclude>
				<exclude>servlet-api-2.4.jar</exclude>
			</excludes>
	    </fileSet>		       
	    <fileSet>
			<directory>../modules/micrite-crm/target</directory>
			<outputDirectory>WEB-INF/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>*-sources.jar</exclude>
			</excludes>
			
	    </fileSet>
	    <fileSet>
			<directory>../modules/micrite-crm/src/main/webapp</directory>
			<outputDirectory></outputDirectory>
	    </fileSet>
	    <fileSet>
			<directory>../modules/micrite-crm/src/main/resources</directory>
			<outputDirectory>WEB-INF/classes</outputDirectory>
			<includes>
				<include>**/struts.xml</include>
				<include>**/applicationContext*.xml</include>				
				<include>**/struts_xml/*</include>	
			</includes>				
	    </fileSet>
	    <fileSet>
			<directory>../modules/micrite-crm/target/dependencies</directory>
			<outputDirectory>WEB-INF/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>tools.jar</exclude>
				<exclude>jsp-api-2.0.jar</exclude>
				<exclude>servlet-api-2.4.jar</exclude>
			</excludes>
	    </fileSet>		       
	</fileSets>	    
</assembly>
