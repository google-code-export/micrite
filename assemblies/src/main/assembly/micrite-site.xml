<assembly>
  <id>site-distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>

    <!-- Include the assemblies in the assembly -->
    <fileSet>
      <directory>target/site</directory>
      <outputDirectory>micrite-assemblies</outputDirectory>
    </fileSet>

    <!-- Include the modules in the assembly -->
    <fileSet>
      <directory>../modules/target/site</directory>
      <outputDirectory>micrite-modules</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>../modules/micrite-beans/target/site</directory>
      <outputDirectory>micrite-modules/micrite-beans</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>../modules/micrite-common/target/site</directory>
      <outputDirectory>micrite-modules/micrite-common</outputDirectory>
    </fileSet>
    
    <fileSet>
      <directory>../modules/micrite-core/target/site</directory>
      <outputDirectory>micrite-modules/micrite-core</outputDirectory>
    </fileSet>    
    
    <fileSet>
      <directory>../modules/micrite-crm/target/site</directory>
      <outputDirectory>micrite-modules/micrite-crm</outputDirectory>
    </fileSet>  

    <fileSet>
      <directory>../modules/micrite-security/target/site</directory>
      <outputDirectory>micrite-modules/micrite-security</outputDirectory>
    </fileSet> 
    <fileSet>
      <directory>../plugins/target/site</directory>
      <outputDirectory>micrite-plugins</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../plugins/jfreechart/target/site</directory>
      <outputDirectory>micrite-plugins/micrite-jfreechart-plugin</outputDirectory>
    </fileSet> 
    <fileSet>
      <directory>../plugins/struts2/target/site</directory>
      <outputDirectory>micrite-plugins/micrite-struts2-plugin</outputDirectory>
    </fileSet>         
    <!-- Include the root in the assembly -->
    <fileSet>
      <directory>../target/site</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
                        
  </fileSets>
</assembly>