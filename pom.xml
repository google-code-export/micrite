			</dependency>
	        <!-- 定义了所有公用类-->	
			<dependency>
			    <groupId>org.gaixie.micrite.modules</groupId>
			    <artifactId>micrite-common</artifactId>
			    <version>0.1-SNAPSHOT</version>
