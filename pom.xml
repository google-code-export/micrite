			</dependency>
			<!-- Spring Security -->
	        <dependency>
	            <groupId>org.springframework.security</groupId>
	            <artifactId>spring-security-core</artifactId>
	            <version>2.0.4</version>
	        </dependency>
	        <dependency>
	            <groupId>org.springframework.security</groupId>
	            <artifactId>spring-security-core-tiger</artifactId>
	            <version>2.0.4</version>
	        </dependency>
	        <dependency>
	            <groupId>org.springframework.security</groupId>
